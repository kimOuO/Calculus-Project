# ======================================
# Django Core Settings
# ======================================
# Django 密鑰 (生產環境必須更換)
DJANGO_SECRET_KEY=your-secret-key-here

# 除錯模式 (生產環境設為 False)
DJANGO_DEBUG=True

# 運行環境 (local/production/test)
DJANGO_ENV=local

# 允許訪問的主機名 (用逗號分隔)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ======================================
# PostgreSQL Database (SQL Metadata)
# ======================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=calculus_db
DB_USER=calculus_user
DB_PASSWORD=your-password-here

# ======================================
# MongoDB Database (File Metadata)
# ======================================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=calculus_user
MONGO_PASSWORD=your-password-here
MONGO_DB=calculus_nosql_db

# ======================================
# File Upload Settings
# ======================================
# 檔案上傳目錄 (考卷、直方圖等)
UPLOAD_DIR=/app/uploads

# ======================================
# CORS Settings
# ======================================
# 允許的前端來源 (用逗號分隔)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ======================================
# Excel Processing (Optional)
# ======================================
# 需安裝: pip install openpyxl
# 用於 upload_excel 和 feedback_excel API

# ======================================
# Chart Generation (Optional)
# ======================================
# 需安裝: pip install matplotlib
# 用於 step_diagram API (成績分布圖)
